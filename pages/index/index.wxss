/**index.wxss**/

.card {
  width: 100%;
  margin-top: 8rpx;
  background-color: #fff;
}

.card-cover {
  width: 100%;
  height: 350rpx;
}

.card-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-top: 5rpx;
  margin-left: 15rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.card-hor {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.card-port {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 12pt;
  color: #000;
   text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.card-tag {
  font-size:10pt;
}

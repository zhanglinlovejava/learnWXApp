/**index.wxss**/

.card {
  width: 100%;
  margin-top: 8px;
  background-color: #fff;
}

.card-cover {
  width: 100%;
  height: 170px;
}

.card-avatar {
  width: 50px;
  height: 50px;
  margin: 10px;
}

.card-hor {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.card-port {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 16sp;
  color: #000;
}

.card-tag {
  font-size: 14sp;
}

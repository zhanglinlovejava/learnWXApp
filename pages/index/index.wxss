/**index.wxss**/

.card {
  width: 100%;
  margin-top: 8px;
  background-color: #fff;
}

.card-cover {
  width: 100%;
  height: 190px;
}

.card-avatar {
  width: 50px;
  height: 50px;
  margin-top: 5px;
  margin-left: 10px;
  margin-right: 10px;
}

.card-hor {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.card-port {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 16sp;
  color: #000;
   text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.card-tag {
  font-size: 14sp;
}

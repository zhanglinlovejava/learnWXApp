/* pages/hot/hot.wxss */
.swiper-tab {
  width: 100%;
  position: fixed;
  display: flex;
  flex-direction: row;
  z-index: 999;
  height: 35px;
  top: 0;
  bottom: 0;
  background: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.swiper-tab-text {
  font-size: 12pt;
  text-align: center;
  width: 33.33%;
  color: #777;
}

.on {
  color: #d52219;
  border-bottom: 5rpx solid #d52219;
}

.swiper {
  margin-top: 40px;
  width: 100%;
  height: 100vh;
}
.category-list {
  width: 100%;
}

.scroll-views {
  height: 100%;
}
.category-box {
  background: #000;
  width: 100vw;
  height: 400rpx;
  position:relative;
  align-items: center;
}

.lunboImage {
  background: #000;
   width: 100vw;
  height: 400rpx;
  color: #fff;
  justify-content: center;
  background-repeat: no-repeat;
  background-size: cover;
  -webkit-mask: -webkit-linear-gradient(rgba(26, 8, 8, 0.8), rgba(26, 8, 8, 0.8), rgba(0, 0, 0, 0.8), rgba(26, 8, 8, 0.8));
}

.category-name {
  position: absolute;
  font-size: 16pt;
  height: 80rpx;
  z-index: 1;
  left: 0;
  bottom: 0;
  width: 100%;
  margin-bottom: 160rpx;
  text-align: center;
  color:#fff;
  overflow: hidden;
}